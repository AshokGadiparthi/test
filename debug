npm install @cytoscape/cytoscape-popper popper.js


import cytoscape from 'cytoscape';
import dagre from 'cytoscape-dagre';
import popper from 'cytoscape-popper';
import tippy from 'tippy.js';
import 'tippy.js/dist/tippy.css';

cytoscape.use(dagre);
cytoscape.use(popper); // âœ… register popper plugin


this.cy.nodes().forEach((node: any) => {
  const ref = node.popperRef(); // now this works
  const tip = tippy(document.createElement('div'), {
    content: this.renderTooltip(node),
    trigger: 'manual',
    placement: 'bottom',
    hideOnClick: true,
    interactive: true,
  });
  node.on('mouseover', () => tip.show());
  node.on('mouseout', () => tip.hide());
});
