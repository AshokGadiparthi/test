export class LineageGraphComponent implements OnInit {
  private cy: any;
  private graphData: any;

  constructor(private http: HttpClient) {}

  ngOnInit() {
    // Load JSON from assets
    this.http.get<any>('assets/full_lineage_graph.json').subscribe({
      next: data => {
        this.graphData = data;
        this.initializeGraph();
      },
      error: err => console.error('Failed to load lineage JSON', err)
    });
  }

  private initializeGraph() {
    if (!this.graphData) return;

    if (this.cy) this.cy.destroy();

    const elements = this.buildElements(this.graphData);
