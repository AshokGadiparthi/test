public class DateTimeTruncation {
    public static void main(String[] args) {
        // Test cases
        String[] testInputs = {
            "2025-01-21T17:21:51.560570316", // 9 digits
            "2025-01-21T17:21:51.560570",    // 6 digits
            "2025-01-21T17:21:51"            // No fractional seconds
        };

        for (String inputDateTime : testInputs) {
            // Find the index of the dot after the seconds
            int dotIndex = inputDateTime.indexOf('.');

            // If a dot exists, truncate to 6 digits after it
            String truncatedDateTime = inputDateTime;
            if (dotIndex != -1) {
                // Ensure there are at least 6 digits after the dot
                int endIndex = Math.min(dotIndex + 7, inputDateTime.length());
                truncatedDateTime = inputDateTime.substring(0, endIndex);
            }

            // Print the result
            System.out.println("Original: " + inputDateTime);
            System.out.println("Truncated: " + truncatedDateTime);
        }
    }
}
