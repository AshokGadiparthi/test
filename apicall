.table-container {
  max-width: 100%;      /* ğŸ‘ˆ ensures table doesn't overflow container */
  overflow-x: auto;     /* ğŸ‘ˆ adds scroll if too wide */
}

.cell-content {
  white-space: nowrap;      /* ğŸ‘ˆ prevents text wrapping */
  overflow: hidden;         /* ğŸ‘ˆ hides overflowed content */
  text-overflow: ellipsis;  /* ğŸ‘ˆ adds "..." if text is too long */
  display: block;           /* ğŸ‘ˆ ensures ellipsis works */
  max-width: 200px;         /* ğŸ‘ˆ adjust per column */
}


<div class="table-container">
  <table mat-table [dataSource]="dataSource" class="mat-elevation-z2 compact-table">

    <!-- Example Column -->
    <ng-container matColumnDef="name">
      <th mat-header-cell *matHeaderCellDef> Name </th>
      <td mat-cell *matCellDef="let element">
        <div class="cell-content">{{element.name}}</div>
      </td>
    </ng-container>

    <!-- More columns ... -->

    <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
    <tr mat-row *matRowDef="let row; columns: displayedColumns;"></tr>
  </table>
</div>
