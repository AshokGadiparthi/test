 // Sample org.joda.time.Instant value
        Instant jodaInstant = Instant.parse("2024-01-01T00:00:00.000Z");

        // Step 1: Convert org.joda.time.Instant to java.util.Date
        java.util.Date date = jodaInstant.toDate();

        // Step 2: Convert java.util.Date to java.time.LocalDateTime
        LocalDateTime localDateTime = date.toInstant().atOffset(ZoneOffset.UTC).toLocalDateTime();

        // Define BigQuery DATETIME format
        DateTimeFormatter formatter = DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss");

        // Format LocalDateTime to BigQuery DATETIME format
        String bigQueryDatetime = localDateTime.format(formatter);

        System.out.println(bigQueryDatetime);
