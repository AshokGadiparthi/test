Timestamp gcpTimestamp = Timestamp.now();
        
        // Convert Google Cloud Timestamp to Instant
        Instant instant = gcpTimestamp.toSqlTimestamp().toInstant();
        
        // Convert Instant to ZonedDateTime in EST/EDT
        ZonedDateTime estTime = instant.atZone(ZoneId.of("America/New_York"));

        // Convert ZonedDateTime to LocalDateTime
        LocalDateTime localDateTimeEST = estTime.toLocalDateTime();

        // Format LocalDateTime (if needed)
        DateTimeFormatter formatter = DateTimeFormatter.ofPattern("yyyy-MM-dd HH:mm:ss");
        String formattedTime = localDateTimeEST.format(formatter);

        // Print results
        System.out.println("GCP Timestamp (UTC): " + gcpTimestamp);
        System.out.println("Converted LocalDateTime (EST): " + formattedTime);
