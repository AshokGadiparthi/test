public static void main(String[] args) {
        // Input datetime string
        String inputDateTime = "2025-01-21T17:21:51.560570316";

        // Parse the input string into LocalDateTime
        LocalDateTime dateTime = LocalDateTime.parse(inputDateTime);

        // Truncate to microseconds (6 digits after the decimal point)
        int microseconds = dateTime.get(ChronoField.NANO_OF_SECOND) / 1000; // Convert nanoseconds to microseconds
        LocalDateTime truncatedDateTime = dateTime.withNano(microseconds * 1000); // Convert back to nanoseconds

        // Format the truncated datetime
        DateTimeFormatter formatter = DateTimeFormatter.ofPattern("yyyy-MM-dd'T'HH:mm:ss.SSSSSS");
        String formattedDateTime = truncatedDateTime.format(formatter);

        // Print the result
        System.out.println("Truncated DateTime: " + formattedDateTime);
    }
